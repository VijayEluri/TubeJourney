<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	  package="net.tevp.tubejourney"
	  android:versionCode="1"
	  android:versionName="1.0">
	<application android:icon="@drawable/icon">
		<activity android:name=".TubeJourney"
			android:label="@string/tube_journey"
			android:taskAffinity=".TubeJourney">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".DepartureAlarm"
			android:label="@string/departure_alarm">
		</activity>
		<activity android:name=".NamedLocations"
				  android:label="@string/named_locations">
			<intent-filter>
				<category android:name="android.intent.category.PREFERENCES" />
			</intent-filter>
		</activity>
		<activity android:name=".NamedLocationEditor"
				  android:label="@string/named_location_editor">
			<intent-filter>
				<category android:name="android.intent.category.PREFERENCES" />
			</intent-filter>
		</activity>
	</application>
	<uses-sdk android:minSdkVersion="3" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />
</manifest> 
